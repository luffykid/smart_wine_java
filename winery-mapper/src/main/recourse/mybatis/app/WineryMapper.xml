<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.changfa.frame.mapper.app.WineryMapper" >
    <resultMap id="wineryMap" type="com.changfa.frame.model.Winery" >
        <result column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="logo" property="logo" jdbcType="VARCHAR" />
        <result column="loading_img" property="loadingImg" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="INTEGER" />
        <result column="status_time" property="statusTime" jdbcType="TIMESTAMP" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="modify_date" property="modifyDate" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, logo, loading_img, status, status_time, create_date, modify_date
    </sql>

    <insert id="save" parameterType="com.changfa.frame.model.Winery" >
        insert into b_winery (id, name, logo, loading_img, status, status_time, create_date, 
            modify_date)
        values (#{id}, #{name}, #{logo}, #{loadingImg}, #{status}, #{statusTime}, #{createDate}, 
            #{modifyDate})
    </insert>

    <select id="selectList" resultMap="wineryMap" >
        select 
        <include refid="Base_Column_List" />
        from b_winery
        <where >
            <if test="id != null" >
                and null.id = #{id}
            </if>
            <if test="name != null and name != ''" >
                and null.name = #{name}
            </if>
            <if test="logo != null and logo != ''" >
                and null.logo = #{logo}
            </if>
            <if test="loadingImg != null and loadingImg != ''" >
                and null.loading_img = #{loadingImg}
            </if>
            <if test="status != null" >
                and null.status = #{status}
            </if>
            <if test="statusTime != null" >
                and null.status_time = #{statusTime}
            </if>
            <if test="createDate != null" >
                and null.create_date = #{createDate}
            </if>
            <if test="modifyDate != null" >
                and null.modify_date = #{modifyDate}
            </if>
        </where>
    </select>

</mapper>