<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.changfa.frame.mapper.app.MemberWechatMapper" >
    <resultMap id="memberWechatMap" type="com.changfa.frame.model.MemberWechat" >
        <result column="id" property="id" jdbcType="BIGINT" />
        <result column="mbr_id" property="mbrId" jdbcType="BIGINT" />
        <result column="nick_name" property="nickName" jdbcType="VARCHAR" />
        <result column="id_no" property="idNo" jdbcType="VARCHAR" />
        <result column="member_level" property="memberLevel" jdbcType="INTEGER" />
        <result column="birthday" property="birthday" jdbcType="DATE" />
        <result column="sex" property="sex" jdbcType="CHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="winery_id" property="wineryId" jdbcType="BIGINT" />
    </resultMap>

    <sql id="Base_Column_List">
      id,mbr_id,nick_name,nick_name,id_no,member_level,birthday,sex,
      age,winery_id
    </sql>

    <insert id="save" parameterType="com.changfa.frame.model.MemberWechat" >
        insert into m_member_wechat (id, mbr_id, nick_name, id_no, member_level, birthday, sex, 
            age, winery_id)
        values (#{id}, #{mbrId}, #{nickName}, #{idNo}, #{memberLevel}, #{birthday}, #{sex}, 
            #{age}, #{wineryId})
    </insert>

    <select id="selectList" resultMap="memberWechatMap" >
        select 
        <include refid="Base_Column_List" />
        from m_member_wechat
        <where >
            <if test="id != null" >
                and null.id = #{id}
            </if>
            <if test="mbrId != null" >
                and null.mbr_id = #{mbrId}
            </if>
            <if test="nickName != null and nickName != ''" >
                and null.nick_name = #{nickName}
            </if>
            <if test="idNo != null and idNo != ''" >
                and null.id_no = #{idNo}
            </if>
            <if test="memberLevel != null" >
                and null.member_level = #{memberLevel}
            </if>
            <if test="birthday != null" >
                and null.birthday = #{birthday}
            </if>
            <if test="sex != null" >
                and null.sex = #{sex}
            </if>
            <if test="age != null" >
                and null.age = #{age}
            </if>
            <if test="wineryId != null" >
                and null.winery_id = #{wineryId}
            </if>
        </where>
    </select>

</mapper>